<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" \
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>weitzner.PipUpdate</string>
  <key>UserName</key>
  <string>root</string>
  <key>Program</key>
  <string>/path/to/update_pip.sh</string>
  <key>StartCalendarInterval</key>
  <dict>
    <key>Day</key>
    <integer>4</integer>
    <key>Minute</key>
    <integer>0</integer>
    <key>Hour</key>
    <integer>4</integer>
  </dict>
  <key>Debug</key>
  <false/>
  <key>AbandonProcessGroup</key>
  <true/>
</dict>
</plist>
